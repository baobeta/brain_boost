{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@vue/runtime-core": ["node_modules/@vue/runtime-core/dist/runtime-core.d.ts"],
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
  }
}
